import runtime

func run //files
	pass; 0
	fail; 0

	for file; //files
		'' println
		/file println
		'import \'`file`\' testing' eval
		exports; clear 'testing' runtime.exports
		for export; //exports
			if /export 'test-' starts-with
				try 'testing.`export`' eval
				if not
					err; clear recv
					'  FAIL: `export`: `err`' println
					fail; inc
				else
					'  pass: `export`' println
					pass; inc
		'testing' undef

	'' println
	'`pass` tests passed, `fail` failed' println

